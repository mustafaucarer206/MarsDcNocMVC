@model IEnumerable<MarsDcNocMVC.Models.User>

@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="container mt-4">
    <h2>Kullanıcı Yönetimi</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
        </div>
    }

    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @TempData["InfoMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="searchString" class="form-control" placeholder="Kullanıcı adı veya lokasyon ara..." value="@ViewBag.CurrentSearch" />
                </div>
                <div class="col-md-4">
                    <select name="locationFilter" class="form-select">
                        <option value="">Tüm Lokasyonlar</option>
                        @foreach (var location in ViewBag.Locations)
                        {
                            <option value="@location" selected="@(ViewBag.CurrentLocation == location)">@location</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-search"></i> Ara
                    </button>
                    <a href="@Url.Action("Users")" class="btn btn-secondary">
                        <i class="fas fa-sync"></i> Sıfırla
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Kullanıcı Adı</th>
                    <th>Rol</th>
                    <th>Lokasyon</th>
                    <th>Telefon</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Username</td>
                        <td>@user.Role</td>
                        <td>@user.LocationName</td>
                        <td>@user.PhoneNumber</td>
                        <td>
                            <a href="@Url.Action("EditUser", "Admin", new { id = user.Id })" class="btn btn-primary btn-sm">
                                <i class="fas fa-edit"></i> Düzenle
                            </a>
                            <a href="@Url.Action("DeleteUser", "Admin", new { id = user.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Bu kullanıcıyı silmek istediğinizden emin misiniz?');">
                                <i class="fas fa-trash"></i> Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> 