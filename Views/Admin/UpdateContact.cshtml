@model MarsDcNocMVC.Models.UpdateContactViewModel

@{
    ViewData["Title"] = "İletişim Bilgilerini Güncelle";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">İletişim Bilgilerini Güncelle</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateContact" method="post">
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="5XX XXX XX XX" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Ana Sayfaya Dön
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Değişiklikleri Kaydet
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 