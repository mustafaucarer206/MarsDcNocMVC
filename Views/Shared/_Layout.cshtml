<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mars DC NOC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MarsDcNocMVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: #f8f9fa;
            padding-top: 0;
            margin-top: 0;
        }
        
        /* Dynamic body padding to prevent content overlap */
        body.navbar-fixed {
            padding-top: var(--navbar-height, 85px);
        }

        /* Clean Modern Navigation */
        .navbar {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%) !important;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            padding: 1rem 0;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            width: 100%;
            z-index: 1060;
            transition: all 0.3s ease;
            min-height: 70px;
        }

        .navbar.scrolled {
            padding: 0.7rem 0;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
        }

        /* Enhanced Brand */
        .navbar-brand {
            font-weight: 800;
            font-size: 2rem;
            color: #ffffff !important;
            text-decoration: none;
            display: flex;
            align-items: center;
            transition: all 0.3s ease;
            letter-spacing: 1px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
        }

        .navbar-brand:hover {
            transform: scale(1.05);
            color: #fff !important;
            text-shadow: 3px 3px 6px rgba(0, 0, 0, 0.4);
        }

        .navbar-brand i {
            color: #ff6b35;
            margin-right: 0.8rem;
            font-size: 1.8rem;
            animation: rocket-pulse 2s ease-in-out infinite;
            text-shadow: 0 0 10px rgba(255, 107, 53, 0.5);
        }

        .navbar-brand .brand-text {
            background: linear-gradient(45deg, #ffffff, #e8f4fd);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            font-weight: 900;
            text-shadow: none;
        }

        @@keyframes rocket-pulse {
            0%, 100% { 
                transform: translateY(0px) scale(1);
                text-shadow: 0 0 10px rgba(255, 107, 53, 0.5);
            }
            50% { 
                transform: translateY(-2px) scale(1.1);
                text-shadow: 0 0 20px rgba(255, 107, 53, 0.8);
            }
        }

        /* Clean Navigation Links */
        .navbar-nav {
            gap: 0.3rem;
        }

        .nav-link {
            color: rgba(255, 255, 255, 0.9) !important;
            font-weight: 600;
            padding: 0.7rem 1.2rem !important;
            border-radius: 8px;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
        }

        .nav-link:hover {
            color: #ffffff !important;
            background: rgba(255, 255, 255, 0.15);
            transform: translateY(-2px);
        }

        .nav-link.active {
            color: #ffffff !important;
            background: rgba(255, 255, 255, 0.2);
            box-shadow: 0 4px 15px rgba(255, 255, 255, 0.2);
        }

        .nav-link i {
            width: 20px;
            text-align: center;
            margin-right: 0.5rem;
            font-size: 1rem;
        }

        /* Status Dots */
        .status-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            margin-left: 0.5rem;
            display: inline-block;
            animation: pulse 2s infinite;
        }

        .dot-green { background-color: #28a745; }
        .dot-orange { background-color: #fd7e14; }
        .dot-red { background-color: #dc3545; }
        .dot-blue { background-color: #007bff; }

        @@keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.6; }
        }

        /* Clean Separators */
        .nav-separator {
            color: rgba(255, 255, 255, 0.3);
            margin: 0 0.5rem;
            font-size: 0.8rem;
        }

        /* Modern Dropdown */
        .dropdown-menu {
            background: #ffffff;
            border: none;
            border-radius: 12px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
            padding: 0.5rem 0;
            margin-top: 0.5rem;
            min-width: 220px;
            z-index: 1070;
        }

        .dropdown-item {
            padding: 0.7rem 1.2rem;
            color: #495057;
            font-weight: 500;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
        }

        .dropdown-item:hover {
            background-color: #f8f9fa;
            color: #1e3c72;
            transform: translateX(5px);
        }

        .dropdown-item i {
            width: 18px;
            margin-right: 0.7rem;
        }

        .dropdown-divider {
            margin: 0.5rem 1rem;
            border-color: #e9ecef;
        }

        /* User Avatar */
        .user-avatar {
            width: 35px;
            height: 35px;
            border-radius: 50%;
            background: linear-gradient(135deg, #ff6b35, #f7931e);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 700;
            margin-right: 0.5rem;
            border: 2px solid rgba(255, 255, 255, 0.2);
        }

        /* Mobile Menu */
        .navbar-toggler {
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 6px;
            padding: 0.4rem;
        }

        .navbar-toggler:focus {
            box-shadow: none;
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath stroke='rgba(255,255,255,0.8)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3E%3C/svg%3E");
        }

        /* Responsive adjustments */
        @@media (max-width: 991px) {
            body.navbar-fixed {
                padding-top: var(--navbar-height-mobile, 120px);
            }
            
            .navbar {
                min-height: 60px;
            }
            
            .navbar-nav {
                background: rgba(255, 255, 255, 0.1);
                border-radius: 12px;
                padding: 1rem;
                margin-top: 1rem;
                gap: 0.2rem;
            }

            .nav-link {
                margin: 0.1rem 0;
            }

            .navbar-brand {
                font-size: 1.6rem;
            }

            .navbar-brand i {
                font-size: 1.4rem;
            }
        }
        
        @@media (max-width: 576px) {
            body.navbar-fixed {
                padding-top: var(--navbar-height-small, 140px);
            }
            
            .navbar-brand {
                font-size: 1.4rem;
            }
        }

        /* Clean Footer */
        .footer {
            background: #343a40;
            color: #ffffff;
            padding: 2rem 0;
            margin-top: 3rem;
        }

        .footer .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
        }

        /* Enhanced Alerts */
        .alert {
            border: none;
            border-radius: 10px;
            padding: 1rem 1.25rem;
            margin-bottom: 1.5rem;
        }

        .alert-success {
            background: linear-gradient(135deg, #d4edda, #c3e6cb);
            color: #155724;
            border-left: 4px solid #28a745;
        }

        /* Clean Cards */
        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
        }

        .card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        /* Page Content */
        .container-fluid {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 1rem;
            position: relative;
            z-index: 1;
        }
        
        /* Ensure main content doesn't overlap with navbar */
        main {
            position: relative;
            z-index: 1;
        }
        
        /* Fix for modals and other high z-index elements */
        .modal {
            z-index: 1080;
        }
        
        .modal-backdrop {
            z-index: 1070;
        }
        
        /* DataTables specific fixes */
        .dataTables_wrapper .dataTables_filter,
        .dataTables_wrapper .dataTables_length,
        .dataTables_wrapper .dataTables_info,
        .dataTables_wrapper .dataTables_paginate {
            z-index: 1;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <!-- Enhanced Brand -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-rocket"></i>
                    <span class="brand-text">Mars DC NOC</span>
                </a>

                <!-- Mobile Toggle -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i>
                                Ana Sayfa
                            </a>
                        </li>

                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <span class="nav-separator">|</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="User" asp-action="Index">
                                    <i class="fas fa-users"></i>
                                    Kullanıcılar
                                    <span class="status-dot dot-green"></span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Location" asp-action="Index">
                                    <i class="fas fa-map-marker-alt"></i>
                                    Lokasyonlar
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="DiskCapacity" asp-action="Index">
                                    <i class="fas fa-hdd"></i>
                                    Disk Kapasitesi
                                    <span class="status-dot dot-orange"></span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="ServerPing" asp-action="Index">
                                    <i class="fas fa-server"></i>
                                    Sunucular
                                    <span class="status-dot dot-green"></span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Movies" asp-action="Index" asp-route-salon="LMS">
                                    <i class="fas fa-film"></i>
                                    Filmler
                                    <span class="status-dot dot-blue"></span>
                                </a>
                            </li>
                        }

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-separator">|</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Backup" asp-action="Index">
                                    <i class="fas fa-video"></i>
                                    Reklam & Fragman
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Backup" asp-action="DcpOnlineFolders">
                                    <i class="fas fa-cloud-upload-alt"></i>
                                    DCP Online
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- User Menu -->
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="user-avatar">
                                        @User.Identity.Name.Substring(0, 1).ToUpper()
                                    </div>
                                    @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">
                                            <i class="fas fa-key"></i>
                                            Şifre Değiştir
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="UpdateContact">
                                            <i class="fas fa-user-edit"></i>
                                            Profili Güncelle
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fas fa-sign-out-alt"></i>
                                                Çıkış Yap
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i>
                                    Giriş Yap
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle me-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <div>
                    <i class="fas fa-rocket me-2"></i>
                    &copy; @DateTime.Now.Year Mars DC NOC - Tüm hakları saklıdır
                </div>
                <div>
                    <span class="badge bg-primary">v1.0</span>
                    <span class="mx-2 text-muted">•</span>
                    <span class="text-muted">Mars Teknoloji</span>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    
    <script>
        $(document).ready(function() {
            // Dynamic navbar height calculation and body padding adjustment
            function adjustBodyPadding() {
                var navbarHeight = $('.navbar').outerHeight();
                var extraPadding = 20; // Extra space for better visual separation
                var totalPadding = navbarHeight + extraPadding;
                
                // Set CSS custom properties for different screen sizes
                document.documentElement.style.setProperty('--navbar-height', totalPadding + 'px');
                
                // Add class to enable padding
                $('body').addClass('navbar-fixed');
                
                // Adjust for mobile
                if ($(window).width() <= 991) {
                    document.documentElement.style.setProperty('--navbar-height-mobile', (totalPadding + 20) + 'px');
                }
                if ($(window).width() <= 576) {
                    document.documentElement.style.setProperty('--navbar-height-small', (totalPadding + 30) + 'px');
                }
            }
            
            // Initial adjustment
            adjustBodyPadding();
            
            // Adjust on window resize
            $(window).resize(function() {
                adjustBodyPadding();
            });
            
            // Auto-hide alerts
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);

            // Navbar scroll effect
            $(window).scroll(function() {
                if ($(this).scrollTop() > 50) {
                    $('.navbar').addClass('scrolled');
                } else {
                    $('.navbar').removeClass('scrolled');
                }
                // Recalculate padding when navbar changes size
                setTimeout(adjustBodyPadding, 100);
            });

            // Active page highlighting
            var currentPath = window.location.pathname.toLowerCase();
            $('.nav-link').each(function() {
                var linkPath = $(this).attr('href');
                if (linkPath && currentPath.includes(linkPath.toLowerCase()) && linkPath !== '/') {
                    $(this).addClass('active');
                } else if (currentPath === '/' && linkPath && linkPath.includes('Home')) {
                    $(this).addClass('active');
                }
            });

            // Smooth scroll for internal links
            $('a[href^="#"]').on('click', function(event) {
                var target = $(this.getAttribute('href'));
                if (target.length) {
                    event.preventDefault();
                    var navbarHeight = $('.navbar').outerHeight();
                    $('html, body').stop().animate({
                        scrollTop: target.offset().top - navbarHeight - 20
                    }, 1000);
                }
            });
            
            // Handle navbar collapse on mobile
            $('.navbar-toggler').on('click', function() {
                setTimeout(adjustBodyPadding, 300);
            });
            
            // Handle dropdown menus z-index
            $('.dropdown-toggle').on('show.bs.dropdown', function() {
                $(this).closest('.dropdown').find('.dropdown-menu').css('z-index', 1070);
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
