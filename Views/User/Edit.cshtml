@model MarsDcNocMVC.Models.User

@{
    ViewData["Title"] = "Kullanıcı Düzenle";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-user-edit me-2"></i>Kullanıcı Düzenle</h2>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Listeye Dön
                </a>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-user me-2"></i>Kullanıcı Bilgilerini Düzenle
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Username" class="form-label">
                                        <i class="fas fa-user me-1"></i>Kullanıcı Adı
                                    </label>
                                    <input asp-for="Username" class="form-control" readonly />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                    <small class="form-text text-muted">Kullanıcı adı değiştirilemez.</small>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Password" class="form-label">
                                        <i class="fas fa-lock me-1"></i>Şifre
                                    </label>
                                    <input asp-for="Password" class="form-control" type="password" placeholder="Yeni şifre giriniz" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Role" class="form-label">
                                        <i class="fas fa-user-tag me-1"></i>Rol
                                    </label>
                                    <select asp-for="Role" class="form-select">
                                        <option value="">-- Rol Seçiniz --</option>
                                        <option value="Admin">Admin</option>
                                        <option value="User">User</option>
                                    </select>
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="LocationName" class="form-label">
                                        <i class="fas fa-map-marker-alt me-1"></i>Lokasyon
                                    </label>
                                    <select asp-for="LocationName" class="form-select">
                                        <option value="">-- Lokasyon Seçiniz --</option>
                                        @if (ViewBag.Locations != null)
                                        {
                                            @foreach (var location in (List<MarsDcNocMVC.Models.Location>)ViewBag.Locations)
                                            {
                                                <option value="@location.Name" selected="@(location.Name == Model.LocationName ? "selected" : null)">
                                                    @location.Name
                                                </option>
                                            }
                                        }
                                    </select>
                                    <span asp-validation-for="LocationName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="PhoneNumber" class="form-label">
                                        <i class="fas fa-phone me-1"></i>Telefon Numarası
                                    </label>
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="Telefon numarası (opsiyonel)" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group mt-4">
                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <button type="submit" class="btn btn-primary me-md-2">
                                    <i class="fas fa-save me-1"></i>Değişiklikleri Kaydet
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="fas fa-times me-1"></i>İptal
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 