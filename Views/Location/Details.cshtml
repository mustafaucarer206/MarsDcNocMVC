@model MarsDcNocMVC.Models.Location

@{
    ViewData["Title"] = "Lokasyon Detayları";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Lokasyon Detayları</h2>
        <div>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Geri
            </a>
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Düzenle
                </a>
            }
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Lokasyon Bilgileri</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Lokasyon Adı</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4">Adres</dt>
                        <dd class="col-sm-8">@Model.Address</dd>

                        <dt class="col-sm-4">Telefon</dt>
                        <dd class="col-sm-8">@Model.PhoneNumber</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Lokasyondaki Kullanıcılar</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.Users != null && ((List<MarsDcNocMVC.Models.User>)ViewBag.Users).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Kullanıcı Adı</th>
                                        <th>Rol</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in (List<MarsDcNocMVC.Models.User>)ViewBag.Users)
                                    {
                                        <tr>
                                            <td>@user.Username</td>
                                            <td>@user.Role</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> Bu lokasyonda henüz kullanıcı bulunmamaktadır.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
        }
        .card-title {
            color: #495057;
            font-weight: 600;
        }
        dt {
            font-weight: 600;
            color: #495057;
        }
        .table th {
            font-weight: 600;
            background-color: #f8f9fa;
        }
    </style>
} 